<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @track.name %> Lyrics</title>
  </head>
  <body>
    <br>
    <%= main_index %>
    <h1><%= @track.name %></h1>

    <form action="<%= track_url(@track)%>" method="post">
      <input type="hidden" name="_method" value="delete">
      <%= authenticate %>

      <input type="submit" name="delete_track" value="Remove Track">
    </form>

    <form action="<%= edit_track_url %>" method="get">
      <%= authenticate %>

      <input type="submit" name="edit_track" value="Edit Track">
    </form>

    <p>
      <%= @track.lyrics %>
    </p>

    <%= render 'notes/note' %>
    <%= render 'notes/form' %>



  </body>
  <footer>
    <br>
    <a href="<%= album_tracks_url(@track.album_id)%>"><<--Back</a>
  </footer>
</html>
